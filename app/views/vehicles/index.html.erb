<h1>Listing vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Person id</th>
      <th>Vehicle registration</th>
      <th>Annual milage</th>
      <th>Estimated value</th>
      <th>Parking location</th>
      <th>Policy start date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.person_id %></td>
        <td><%= vehicle.vehicle_registration %></td>
        <td><%= vehicle.annual_mileage %></td>
        <td><%= vehicle.estimated_value %></td>
        <td><%= vehicle.parking_location %></td>
        <td><%= vehicle.policy_start_date %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

